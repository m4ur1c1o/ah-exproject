<div class="row">
  <div class="col-md-7 col-md-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading"></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-3 col-md-offset-1 text-center">
            <%= image_tag("default.jpg", class: "img-profile img-circle img-center", width: "200px")  %>
          </div>
          <div class="col-md-6 col-md-offset-2">
            <h3>Nombre: <%= @user.firstname %></h3>
            <h3>Apellido: <%= @user.lastname %></h3>
            <h3>Genero: <%= @user.gender %></h3>
            <h3>Email: <%= @user.email %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<br>

<div class="row">
  <%= link_to 'Registrar Estudio', new_hormone_level_path, class: 'btn btn-success', id: 'boton' %>
  <%= link_to 'Sintomas', "", class: 'btn btn-success', id: 'boton' %>
  <h2>Historial</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Fecha del Estudio</th>
        <th>Limites</th>
        <th>Nivel</th>
        <th>Hormona</th>
      </tr>
    </thead>
    <tbody>
      <% @studies.each do |x| %>
      <tr>
        <td><%= x.created_at %></td>
        <td>
          <ul>
            <% x.hormone_levels.each do |y| %>
              <li><%= "#{y.min} - #{y.max}" %></li>
            <% end %>
          </ul>
        </td>

        <td>
          <ul>
            <% x.hormone_levels.each do |y| %>
              <li><%= y.level %></li>
            <% end %>
          </ul>
        </td>

        <td>
          <ul>
            <% x.hormone_levels.each do |y| %>
              <li><%= y.hormone.name %></li>
            <% end %>
          </ul>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>
</div>
